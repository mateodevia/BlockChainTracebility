version: '2'

networks:
  test:

services:
  cli:
    container_name: cli
    image: hyperledger/fabric-tools:2.0.1
    stdin_open: true
    tty: true
    working_dir: /var/hyperledger/
    user: ${CURRENT_UID}
    # command: ls
    volumes:
      - ../:/var/hyperledger/
      - ../../../smartcontracts/:/var/smartcontracts/
    networks:
      - test
    extra_hosts:
